<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_activity_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/detail_activity_tab_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:clipToPadding="false">
        <android.support.v7.widget.CardView
            android:id="@+id/detail_fragment_stats_button"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginRight="2.5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#29C9BD"
            app:cardMaxElevation="6dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/detail_fragment_stats_button_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_bar_chart"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/detail_fragment_stats_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="통계"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/white"
                        fontPath="fonts/NanumSquareBold.ttf"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/detail_fragment_archievement_button"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2.5dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            app:cardMaxElevation="6dp"
            app:cardCornerRadius="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/detail_fragment_archievement_button_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_medal"
                        app:tint="#C0C9CF"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/detail_fragment_archievement_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="업적"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#C0C9CF"
                        fontPath="fonts/NanumSquareBold.ttf"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/detail_fragment_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:layout_below="@id/detail_activity_tab_button_container"
        android:layout_above="@+id/detail_fragment_bottom_slide_panel_container" />

    <android.support.v7.widget.CardView
        android:id="@+id/detail_fragment_bottom_slide_panel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/detail_fragment_bottom_slide_panel_character"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_earth_level1"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/detail_fragment_bottom_slide_panel_character"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/detail_fragment_bottom_slide_panel_level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv. 1"
                    android:textColor="#626262"
                    android:textSize="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2.5dp">
                    <TextView
                        android:id="@+id/detail_fragment_bottom_slide_panel_readable_level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="엄청 많이 아픈 지구"
                        android:textColor="#FC3C3C"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/detail_fragment_bottom_slide_panel_readable_small_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(레벨업까지 휴대폰 사용 안하기. 3시간)"
                        android:textColor="#626262"
                        android:layout_marginLeft="5dp"
                        android:textSize="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
